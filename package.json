{
  "name": "chat-api",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:bundleServer": "esbuild src/index.ts --bundle --platform=node --format=cjs --target=node22 --outfile=dist/index.cjs",
    "build:bundleClient": "esbuild src/client/client.js --bundle --platform=node --format=esm --target=node22 --outfile=dist/client/client.js",
    "build:assets": "copy .htaccess dist && copy package.json dist && xcopy src\\client\\*.html dist\\client /E /I /Y && xcopy src\\client\\*.css dist\\client /E /I /Y",
    "build": "npm run build:bundleServer && npm run build:bundleClient && npm run build:assets",
    "dev": "tsx watch src/index.ts",
    "prod": "node dist/index.cjs",
    "start": "node index.cjs"
  },
  "dependencies": {
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/node": "^20.3.2",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.1.5",
    "typescript-eslint": "^8.0.1"
  }
}
